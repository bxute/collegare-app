<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.collegare.com.collegare" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activity.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.apkacollegare.collegare.HOME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Profile"
            android:label="@string/app_name"
            android:parentActivityName=".Activity.Home" >
            <intent-filter>
                <action android:name="com.collegare.com.collegare.PROFILE" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Login"
            android:label="@string/title_activity_home"
            android:windowSoftInputMode="stateAlwaysVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.individualPost"
            android:label="@string/title_activity_individual_post"
            android:parentActivityName=".Activity.Home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".Activity.Home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.postSend"
            android:label="@string/title_activity_post_send"
            android:parentActivityName=".Activity.Home" />
        <activity
            android:name=".Activity.MessageSend"
            android:label="@string/title_activity_message_send"
            android:parentActivityName=".Activity.Home"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activity.PollTest"
            android:label="@string/title_activity_poll_test" >
        </activity>
        <activity
            android:name=".Activity.MessageRoom"
            android:label="@string/title_activity_message_room" >
        </activity>
    </application>

</manifest>
