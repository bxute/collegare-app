<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="8dp"
            android:textSize="25dp"
            android:text="Poll Options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button

            android:textColor="@color/primaryColor"
            android:textSize="11sp"
            android:background="@drawable/done_btn_bg"
            android:id="@+id/doneBtn"
            android:text="done"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"/>
    </RelativeLayout>
    <EditText
        android:layout_margin="4dp"
        android:hint="    Poll Title"
        android:layout_marginRight="15dp"
        android:background="@drawable/post_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="4dp"
        android:padding="3dp"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="    Add Options....."
            android:layout_marginRight="15dp"
            android:background="@drawable/post_box"
            android:id="@+id/optionInputBox"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="11sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/collegareBtn"
            android:background="@drawable/done_btn_bg"
            android:id="@+id/addBtn"
            android:layout_weight="1"
            android:text="add"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"/>
    </LinearLayout>
    <ListView
        android:layout_marginTop="24dp"
        android:id="@+id/pollOptionList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>