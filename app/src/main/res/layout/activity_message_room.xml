<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.collegare.com.collegare.Activity.MessageRoom"
    android:background="#cecece">
<FrameLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/msgRoomMessageRV"/>
</FrameLayout>
    <FrameLayout
        android:layout_marginBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:background="@drawable/customeditbox"
                android:padding="4dp"
                android:layout_weight="1"
                android:hint="Hi Ankit"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
            <ImageView
                android:layout_marginRight="4dp"
                android:background="@drawable/pi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <FrameLayout
                android:background="@drawable/msg_send_btn_bg"
                android:layout_gravity="center_vertical"
                android:padding="6dp"
                android:layout_width="40dp"
                android:layout_height="40dp">
                <ImageView
                    android:src="@drawable/send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
