<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collegare.com.collegare.activities.PostCreateActivity">
    <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

    <RelativeLayout
        android:id="@+id/holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:maxLines="9"
            android:background="@drawable/post_box"
            android:layout_marginTop="72dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Content"
            android:id="@+id/postContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_marginRight="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/collegareBtn"
            android:background="@drawable/post_send_btn"
            android:layout_marginTop="36dp"
            android:layout_below="@+id/postContent"
            android:text="Send"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/send" />
    </RelativeLayout>
</RelativeLayout>
