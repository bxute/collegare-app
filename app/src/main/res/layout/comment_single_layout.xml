<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/commentInfoHolder"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text = "Comment Karne Wala"
                android:gravity="center_vertical"
                android:id="@+id/commentUser"/>

            <RelativeLayout
                android:layout_toRightOf="@+id/commentUser"
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:layout_height="match_parent">

            <TextView
                android:id="@+id/passTime"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3 Min"/>
            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/commentInfoHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/commentContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:padding="10dp"
            android:text="This is a comment just to test that our app is working properly and there are no bugs. If there are any bugs we will have to delete everything and start from scrat   sdsa."/>
    </RelativeLayout>
</RelativeLayout>